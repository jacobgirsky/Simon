<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353a3d"
    tools:context=".SimonOriginal">

    <TextView
        android:id="@+id/title1_tv"
        android:layout_width="wrap_content"
        android:layout_height="71dp"
        android:text="ORIGINAL"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110000014" />


    <ImageButton
        android:id="@+id/blue_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_score_tv"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/blue" />

    <ImageButton
        android:id="@+id/red_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/blue_ib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1_tv"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/red" />

    <ImageButton
        android:id="@+id/yellow_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/high_score_tv"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/yellow" />

    <ImageButton
        android:id="@+id/green_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/yellow_ib"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1_tv"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/green" />

    <TextView
        android:id="@+id/high_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High score: 0"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingLeft="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current score: 0"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingRight="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/how_to_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_ib"
        app:layout_constraintVertical_bias="0.77"
        app:srcCompat="@drawable/questionmark" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

</android.support.constraint.ConstraintLayout>